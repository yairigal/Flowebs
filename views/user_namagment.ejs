<ul class="col-lg-7 list-group">
    <% data.users.forEach(function (user) { %>
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <h4><%= user.username %></h4>
                <% if(data.currentUser && data.currentUser.type == "MANAGER"){ %>
                <h4><%= user.password %></h4>
<!--
                <h4><a id="edit-btn" data-toggle="modal" data-target="#EditUserModal" itemid=<%= user %> onclick= openEditUser(<%=user%>)>Edit User</a></h4>
-->
                <h4><a onclick="openEditUser(<%=user.id%>)">Edit User</a></h4>
                <% } %>
            </div>
        </div>
    </div>
    </div>
    <% }) %>

    <!-- Modal -->
    <div class="modal" id="AddUserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Add User</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <ul class="list-group">
                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="ADDUSERNAME">Username</label>
                            <input id="add-user-username" name="ADDUSERNAME" type="text" placeholder=""
                                   class="form-control input-md" required="">
                        </div>
                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="ADDPASSWORD">ADD PASSWORD</label>
                            <input id="add-user-pass" name="ADDPASSWORD" type="password" placeholder=""
                                   class="form-control input-md" required="">
                        </div>

                        <div class="dropdown">
                            <button class="btn btn-default dropdown-toggle" type="button" id="addMenu"
                                    data-toggle="dropdown">Please Select Type
                                <span class="caret"></span></button>
                            <ul id="add-user-type" class="dropdown-menu" role="menu" aria-labelledby="menu1">
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">CLIENT</a></li>
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">WORKER</a></li>
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">MANAGER</a></li>
                            </ul>
                        </div>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnAddUser" class="btn btn-primary">Add</button>
                </div>
            </div>
        </div>
    </div>
</ul>


<div class="modal" id="EditUserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Add User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <ul class="list-group">
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="ADDUSERNAME">Username</label>
                        <input id="edit-user-username" name="ADDUSERNAME" type="text" placeholder=""
                               class="form-control input-md" required="">
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="ADDPASSWORD">ADD PASSWORD</label>
                        <input id="edit-user-pass" name="ADDPASSWORD" type="password" placeholder=""
                               class="form-control input-md" required="">
                    </div>

                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="editMenu"
                                data-toggle="dropdown">Please Select Type
                            <span class="caret"></span></button>
                        <ul id="edit-user-type" class="dropdown-menu" role="menu" aria-labelledby="menu1">
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">CLIENT</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">WORKER</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">MANAGER</a></li>
                        </ul>
                    </div>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" id="edit-user-btn" class="btn btn-primary">Done</button>
            </div>
        </div>
    </div>
</div>
<!-- Button trigger modal -->
<button type="button" class="col-lg-2 btn-primary" data-toggle="modal" data-target="#AddUserModal">
    Add User
</button>

<script src="../js/user_man.js"></script>
